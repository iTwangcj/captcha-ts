{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"sourceMap": false,
		"declaration": true,
		"removeComments": false,
		"noImplicitAny": false,
		"outDir": "lib/"
	},
	"filesGlob": [ //需转换的文件
		"./captcha-ts/**/*.ts"
	],
	"exclude":[ // 需排除的文件
		"tests",
		".gitignore",
		"tsconfig.json"
	]
}